{
  "name": "git-spice",
  "displayName": "git-spice",
  "description": "git-spice",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "files": [
    "dist",
    "media"
  ],
  "contributes": {
    "commands": [
      {
        "command": "git-spice.refreshBranches",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "git-spice.branchCreateFromCommitMessage",
        "title": "Git Spice: Create Branch from Commit Message"
      }
    ],
    "keybindings": [
      {
        "command": "git-spice.branchCreateFromCommitMessage",
        "key": "cmd+shift+enter",
        "mac": "cmd+shift+enter",
        "win": "ctrl+shift+enter",
        "linux": "ctrl+shift+enter",
        "when": "focusedView == 'workbench.scm' && inputFocus"
      }
    ],
    "views": {
      "scm": [
        {
          "id": "gitSpice.branches",
          "name": "Git Spice",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "git-spice.refreshBranches",
          "when": "view == gitSpice.branches",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sortablejs": "^1.15.8",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "prettier": "3.6.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.41",
    "sortablejs": "^1.15.6"
  }
}
